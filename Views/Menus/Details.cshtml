@model AfpEat.Menu

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

@foreach (var categorie in Model.Categories)
{
    List<SelectListItem> data =
        (List<SelectListItem>)ViewData["cat" + categorie.IdCategorie];
    <div>@categorie.Nom</div>
    @Html.DropDownList("cat" + categorie.IdCategorie, data,
                    "Selectionner",
                    new { @class = "form-control" })
}

<div>
    <h4>Menu</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Statut)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Statut)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Prix)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Prix)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.IdMenu }) |
    @Html.ActionLink("Back to List", "Index")
</p>
