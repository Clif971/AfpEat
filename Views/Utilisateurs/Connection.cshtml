                var data = {
                    'idsession': '@Session.SessionID',
                    'matricule': matricule,
                    'password': password
                };
                $.ajax({
                    url: '@Url.Action("LoginUtilisateur", "SW")',
                    type: 'POST',
                    data: JSON.stringify(data),
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    success: function (data) {
                        if (data.error == 1) {
                            alert(data.message);
                        }
                        else {
                            $('#modalConnexion').modal("hide");
                        }
                    },
                    error: function () {
                        alert("Erreur");
                    }
                })
            }
