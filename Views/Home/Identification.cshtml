
@{
    ViewBag.Title = "Identification";
}

<div class="container">
    <div class="row">
        <div class="col-12 col-sm-8 col-md-6 col-lg-4">
            <div class="card">
                <div class="card-header">
                    <center><h2>Identification</h2></center>
                    <ul class="nav nav-pills card-header-pills nav-justified" id="identification-list" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" href="#connexion" role="tab" aria-controls="connexion" aria-selected="true">Connexion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#creercompte" role="tab" aria-controls="creercompte" aria-selected="false">Créer compte</a>
                        </li>

                    </ul>
                </div>
                <div class="card-body">
                    <h4 class="card-title"></h4>


                    <div class="tab-content mt-3">
                        <div class="tab-pane active" id="connexion" role="tabpanel">
                            <p class="card-text"><input id="txtEmail" texte="Entrez votre email" type="text" /></p>
                            <a href="#connexion" class="card-link text-danger"><h6 class="card-subtitle mb-2"><input id="Password1" type="password" /></h6></a>
                        </div>

                        <div class="tab-pane" id="creercompte" role="tabpanel" aria-labelledby="creercompte-tab">
                            <p class="card-text">Nom</p>
                            prenom
                            Email
                            Telephone
                            <input id="btnValider2" type="button" value="button" />
                            <a href="#creercompte" class="card-link text-danger">Read more</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {

    $('#identification-list a').on('click', function (e) {
    e.preventDefault()
    $(this).tab('show')
    })
}

